{
    "compilerOptions": {
    "target": "es6",
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "isolatedModules": true,
    "types": ["node"],
    "baseUrl": ".", // Add this
    "paths": { // Add this
        "@/*": ["./src/*"]
    }
    },
    "include": ["src/**/*", "src/api/api.ts"],
    "exclude": ["node_modules"]
}